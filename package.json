{
  "name": "windows-rms-client",
  "version": "1.0.0",
  "main": "main.js",
  "bin": "installer.js",
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "index.js"
    ]
  },
  "dependencies": {
    "axios": "^1.8.2",
    "node-windows": "0.1.14",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1"
  },
  "scripts": {
    "build": "pkg .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/index.js",
    "electron-start": "electron .",
    "electron-build": "electron-builder",
    "electron-pack": "electron-builder --dir",
    "electron-dist": "electron-builder"
  },
  "build": {
    "appId": "com.navgurukul.windowsrms",
    "productName": "Windows RMS",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
